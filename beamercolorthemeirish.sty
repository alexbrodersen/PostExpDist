\mode<presentation>

\definecolor{NDblue}{RGB}{2,43,91}
\definecolor{NDgold}{RGB}{220,180,57}
\definecolor{NDalttan}{RGB}{246,231,161}
\definecolor{NDaltgreen}{RGB}{70,85,16}
\definecolor{NDaltolive}{RGB}{153,150,35}
\definecolor{NDaltbrown}{RGB}{48,34,5}
\definecolor{NDaltred}{RGB}{95,23,9}
\definecolor{NDaltblue}{RGB}{90,171,188}
\definecolor{darkred}{rgb}{0.8,0,0}



\setbeamercolor{section in toc}{fg=NDblue}
\setbeamercolor{subsection in toc}{fg=NDblue}

% \setbeamercolor{section in toc}{fg=black,bg=white}
% \setbeamercolor{alerted text}{fg=darkred!80!gray}
\setbeamercolor*{palette primary}{fg=NDgold,bg=NDblue}
\setbeamercolor*{palette secondary}{fg=NDblue,bg=NDgold}
\setbeamercolor*{palette tertiary}{fg=NDblue,bg=NDgold}
\setbeamercolor*{palette quaternary}{fg=white,bg=NDblue}

\setbeamercolor*{sidebar}{fg=NDblue,bg=NDalttan}

\setbeamercolor*{palette sidebar primary}{fg=NDblue}
\setbeamercolor*{palette sidebar secondary}{fg=NDblue}
\setbeamercolor*{palette sidebar tertiary}{fg=NDaltgreen}
\setbeamercolor*{palette sidebar quaternary}{fg=NDaltgreen}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=palette secondary}
\setbeamercolor{frametitle}{parent=palette primary,fg=NDGold}
\setbeamercolor{frametitle right}{bg=gray!60!white}


% \setbeamercolor*{separation line}{NDgold}
% \setbeamercolor*{fine separation line}{NDgold}

\setbeamercolor*{itemize item}{fg=NDblue}
\setbeamercolor*{itemize subitem}{fg=NDblue}
\setbeamercolor*{itemize subsubitem}{fg=NDblue}

\setbeamercolor*{enumerate item}{fg=NDblue}
\setbeamercolor*{enumerate subitem}{fg=NDblue}
\setbeamercolor*{enumerate subsubitem}{fg=NDblue}

% Standard block
\setbeamercolor{block title}{fg = white, bg = NDblue}
\setbeamercolor{block body}{bg = NDalttan}

% Alert block
\setbeamercolor{block title alerted}{bg = NDaltred,fg=white}
\setbeamercolor{block body alerted}{bg = NDalttan}

% Example block
\setbeamercolor{block title example}{bg =NDaltgreen,fg=white}
\setbeamercolor{block body example}{bg = NDalttan}

% \setbeamercolor{normal text}{bg=NDalttan}
\setbeamercolor{frametitle}{fg=NDgold,bg=NDblue}
\setbeamercolor{title}{fg=NDblue,bg=NDgold}

\setbeamercolor{author in head/foot}{parent = palette primary}
\setbeamercolor{title in head/foot}{parent = palette secondary}
\setbeamercolor{date in head/foot}{parent = palette primary}


\mode
<all>
